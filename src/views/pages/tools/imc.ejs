<%- include("../../partials/_header.ejs", {headTitle: "Descubra seu IMC", headDesc: "Saiba como está seu Índice de Massa Corporal através da nossa calculadora!"}) %>

<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Calculadora de Índice de Massa Corporal</h2>
                    <div class="bt-option">
                        <a href="/#">Início</a>
                        <a href="#">Ferramentas</a>
                        <span>Calculadora IMC</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bmi-calculator-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title chart-title">
                    <span>verifique seu corpo</span>
                    <h2>GRÁFICO DA CALCULADORA DE IMC</h2>
                </div>
                <div class="chart-table">
                    <table>
                        <thead>
                            <tr>
                                <th>IMC</th>
                                <th>STATUS DE PESO</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="point">Abaixo de 18.5</td>
                                <td>Abaixo do peso</td>
                            </tr>
                            <tr>
                                <td class="point">18.5 - 24.9</td>
                                <td>Saudável</td>
                            </tr>
                            <tr>
                                <td class="point">25.0 - 29.9</td>
                                <td>Acima do peso</td>
                            </tr>
                            <tr>
                                <td class="point">30.0 - e Acima</td>
                                <td>Obeso</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="section-title chart-calculate-title">
                    <span>verifique seu corpo</span>
                    <h2>CALCULE SEU IMC</h2>
                </div>
                <div class="chart-calculate-form">
                    <p>Preencha os campos abaixo para calcular seu Índice de Massa Corporal.</p>
                    <form id="bmi-form">
                        <div class="row">
                            <div class="col-sm-6">
                                <input type="text" id="height" placeholder="Altura / cm">
                            </div>
                            <div class="col-sm-6">
                                <input type="text" id="weight" placeholder="Peso / kg">
                            </div>
                            <div class="col-sm-6">
                                <input type="text" id="age" placeholder="Idade">
                            </div>
                            <div class="col-sm-6">
                                <select id="sex" placeholder="Sexo">
                                    <option value="male">Masculino</option>
                                    <option value="female">Feminino</option>
                                </select>
                            </div>
                            <div class="col-lg-12">
                                <button type="button" onclick="calculateBMI()">Calcular</button>
                            </div>
                            <div class="col-lg-12">
                                <p id="result"></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function calculateBMI() {
        var height = document.getElementById('height').value;
        var weight = document.getElementById('weight').value;
        var age = document.getElementById('age').value;
        var sex = document.getElementById('sex').value;

        // Fórmula de cálculo do IMC
        var bmi = weight / ((height / 100) * (height / 100));

        // Exibição do resultado
        var result = document.getElementById('result');
        result.innerHTML = "Seu IMC é: " + bmi.toFixed(2);

        // Verificação do status de peso com base no IMC
        if (bmi < 18.5) {
            result.innerHTML += "<br>Você está abaixo do peso.";
        } else if (bmi >= 18.5 && bmi <= 24.9) {
            result.innerHTML += "<br>Você está com um peso saudável.";
        } else if (bmi >= 25.0 && bmi <= 29.9) {
            result.innerHTML += "<br>Você está acima do peso.";
        } else {
            result.innerHTML += "<br>Você está obeso.";
        }
    }
</script>

    
