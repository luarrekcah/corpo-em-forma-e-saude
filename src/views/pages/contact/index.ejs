<!-- Contact Section Begin -->
<section class="contact-section spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="section-title contact-title">
          <span>Contacte-nos</span>
          <h2>ASSUNTOS GERAIS</h2>
        </div>
        <div class="contact-widget">
          <div class="cw-text">
            <i class="fa fa-map-marker"></i>
            <p>R. dos Pioneiros, Acrelândia - AC, 69945-000</p>
          </div>
          <div class="cw-text">
            <i class="fa fa-mobile"></i>
            <ul>
              <li>68 9228-1830</li>
            </ul>
          </div>
          <div class="cw-text email">
            <i class="fa fa-envelope"></i>
            <p>alannabrito60@gmail.com</p>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="leave-comment">
          <form>
            <input type="text" placeholder="Nome" id="name" />
            <textarea placeholder="Mensagem" id="message"></textarea>
            <button onclick="sendMessage()">Enviar</button>
          </form>
        </div>
      </div>
    </div>
    <div class="map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15713.20015589812!2d-67.0500077!3d-10.0744832!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x93d5411c4f1d2a6d%3A0x1dfcf3ae389e12ee!2sCORPO%20EM%20FORMA%20%26%20SAUDE%20ACADEMIA!5e0!3m2!1spt-BR!2sbr!4v1711072904177!5m2!1spt-BR!2sbr"
        width="600"
        height="450"
        style="border: 0"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </div>
</section>
<!-- Contact Section End -->

<script>
  function sendMessage() {
    const name = document.getElementById("name").value;
    const message = document.getElementById("message").value;
    if (!name || !message) {
      alert("Por favor, preencha todos os campos.");
      return;
    }
    const whatsappLink = `https://wa.me/+556892281830?text=Olá,%20me%20chamo%20${encodeURIComponent(name)}.%0A%0A${encodeURIComponent(message)}`;
    window.open(whatsappLink, "_blank");
  }
</script>

